---
import { Icon } from "astro-icon/components";
const { prevItem, nextItem } = Astro.props;
---

<div
    class="flex flex-col md:flex-row justify-between items-end w-full h-20 mb-10 space-x-5 text-dark">
    {
        nextItem && (
            <a
                href={`/${nextItem.collection}/${nextItem.slug}`}
                class="flex items-center mr-auto hover:text-light transition-colors ease-out-expo group h-10"
                id="nextLink">
                <Icon
                    name="fa6-solid:arrow-left"
                    class="mr-2 size-5 group-hover:size-10 transition-all ease-out-expo"
                />
                <span class="text-sm md:text-base truncate max-w-96">
                    {nextItem.data.title}
                </span>
            </a>
        )
    }
    {
        prevItem && (
            <a
                href={`/${prevItem.collection}/${prevItem.slug}`}
                class="flex items-center ml-auto hover:text-light transition-colors ease-out-expo group h-10"
                id="prevLink">
                <span class="text-sm md:text-base truncate max-w-96">
                    {prevItem.data.title}
                </span>
                <Icon
                    name="fa6-solid:arrow-right"
                    class="ml-2 size-5 group-hover:size-10 transition-all ease-out-expo"
                />
            </a>
        )
    }
</div>

<script>
    document.addEventListener("keydown", (e) => {
        if (e.key === "ArrowLeft") {
            const nextLink = document.getElementById("nextLink");
            if (nextLink) nextLink.click();
        } else if (e.key === "ArrowRight") {
            const prevLink = document.getElementById("prevLink");
            if (prevLink) prevLink.click();
        }
    });
</script>
