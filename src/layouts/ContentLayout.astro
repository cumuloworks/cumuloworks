---
import BaseLayout from "./BaseLayout.astro";
import PrevNext from "../components/PrevNext.astro";
import "../styles/markdown.css";

const {
    title,
    description,
    category,
    date,
    prevItem,
    nextItem,
    base,
    isContentPage = true,
} = Astro.props;
---

<BaseLayout title={title}>
    <article class="w-full">
        <slot name="hero" />
        <div class="h-12"></div>
        <div class="markdown-content max-w-screen-md mx-auto">
            <div class="mt-10 mb-20">
                <h1>{title}</h1>
                <p
                    class="font-bold text-xl text-center text-cumulolight space-x-4"
                >
                    <span> {date}</span>
                    <span> {category}</span>
                </p>
            </div>
            <slot />
        </div>
        <slot name="additional-content" />
        {
            isContentPage && (
                <PrevNext prevItem={prevItem} nextItem={nextItem} base={base} />
            )
        }
    </article>
</BaseLayout>
